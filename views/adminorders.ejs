<%- include layouts/header.ejs %>

<h1>ADMIN ORDERS</h1>

<main class="content-faq">
    <h1 class="bottom-dotted text-center pt-1">List of Orders</h1> 

    <section class="content-user">
        <table>
            <tr>
                <th>Order ID</th>
                <th>total</th>
                <th>Paid</th>
                <th>Customer ID</th>
                <th>Pick Up Time</th>
                <th>Shop Name</th>
                <th>Status</th>
            </tr>                   
            <% if(data.length){             
                for(var i = 0;i < data.length;i++) { %>
                <tr>
                    <td><%=data[i].ord_id%></td>
                    <td><%=data[i].customer_id%></td>
                    <td><%=data[i].total%></td>
                    <td><%=data[i].paid%></td>
                    <td><%=data[i].pickup%></td>
                    <td><%=data[i].shopname%></td>
                    <td><%=data[i].status%></td>
                    <td>
                       <a class="btn-secondary" href="../adminproducts/edit/<%=data[i].id%>">Edit</a>
                       <a class="btn-secondary" href="../users/delete/<%=data[i].id%>">Delete</a>
                      
                    </td>
                </tr>
            <% }
            }else{ %>
                <tr>
                   <td colspan="3">No products</td>
                </tr>
           <% } %>    
        </table>
        <div class="container">
            <a href="/profile" target="" class="btn-secondary" role="button" aria-pressed="true">
                Admin Dashboard
            </a>
        </div>

    </section>


</main>     

<%- include layouts/footer.ejs %>